<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>com.elderresearch</groupId>
		<artifactId>eri-application-base</artifactId>
		<version>3.4.2</version>
	</parent>

	<groupId>jdimeo</groupId>
	<artifactId>triplea-map-tools</artifactId>
	<name>TripleA Map Editing Tools</name>
	<description>Easy editing of TripleA XML game files via MS Excel</description>
	<version>0.0.1-SNAPSHOT</version>

	<dependencies>
		<dependency>
			<groupId>com.elderresearch.commons</groupId>
			<artifactId>eri-commons-xsd</artifactId>
			<version>0.2.0</version>
		</dependency>
		<dependency>
			<groupId>com.elderresearch.commons</groupId>
			<artifactId>eri-commons-lang</artifactId>
			<version>1.7.6</version>
		</dependency>
		<dependency>
			<groupId>org.apache.poi</groupId>
			<artifactId>poi-ooxml</artifactId>
			<version>3.9</version>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.jvnet.jaxb2.maven2</groupId>
				<artifactId>maven-jaxb2-plugin</artifactId>
				<version>0.13.1</version>
				<executions>
					<execution>
						<goals>
							<goal>generate</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<schemaIncludes>
						<include>*.dtd</include>
					</schemaIncludes>
					<args>
						<arg>-XsimpleEquals</arg>
						<arg>-XsimpleHashCode</arg>
						<arg>-Xannotate</arg>
						<arg>-Xfluent-builder</arg>
					</args>
					<plugins>
						<plugin>
							<groupId>org.jvnet.jaxb2_commons</groupId>
							<artifactId>jaxb2-basics</artifactId>
							<version>0.11.1</version>
						</plugin>
						<plugin>
                            <groupId>net.codesup.util</groupId>
                            <artifactId>jaxb2-rich-contract-plugin</artifactId>
                            <version>1.15.0</version>
                        </plugin>
						<plugin>
							<groupId>org.jvnet.jaxb2_commons</groupId>
							<artifactId>jaxb2-basics-annotate</artifactId>
					        <version>1.0.2</version>
						</plugin>
					</plugins>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>